{{ 'intro.css' | asset_url | stylesheet_tag }}

<section class="intro" style="background-image: url( '{{ section.settings.image | image_url }}' );">
    <div class="container container--intro">
        <div class="hero__content">
            <h1 class="intro__title">{{ section.settings.title | upcase }}</h1>
            <div class="intro__subtitle">{{ section.settings.description }}</div>
            <a href="{{ section.settings.button_link }}" class="intro__btn">
                <span>{{ section.settings.button_label | upcase }}</span>
                {% render "arrow" %}
            </a>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Hero",
        "class": "hero-section",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Hero Image"
            },
            {
                "type": "text",
                "id": "title",
                "default": "Example Heading",
                "label": "Heading Title"
            },
            {
                "type": "richtext",
                "id": "description",
                "default": "<p>Example Paragraph</p>",
                "label": "Heading Description"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Button",
                "label": "Heading Button Label"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Heading Button Link"
            }
        ],
        "presets":[
            {
                "category": "Hero",
                "name": "Hero"
            }
        ]
    }
{% endschema %}