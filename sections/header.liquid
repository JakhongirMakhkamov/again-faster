{{ 'header.css' | asset_url | stylesheet_tag }}

{% if shop.customer_accounts_enabled %}
    {% if customer %}
        <a href="">account</a>
        {{ 'log out'  | customer_logout_link }}
    {% else %}
        {{ 'log in ' | customer_login_link }}
        {{ 'register' | customer_register_link }}
    {% endif %}
{% endif %}

<nav class="{% if template == 'index' %} nav--white {% endif %}">
    <div class="container container--nav">
        <a href="" class="nav__logo">{% render "icon-logo" %}</a>
        <ul class="nav__links">
            {% for link in linklists.main-menu.links %}
                {% assign child_list_handle = link.title | handleize %}
                    {% if linklists[child_list_handle].links != blank %}
                        <li class="nav__link">
                            <a href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                        [{% for childlink in linklists[child_list_handle].links %}
                            <li class="nav__link">
                                <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                            </li>
                        {% endfor %}]
                    {% else %}
                        <li class="nav__link">
                            <a href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                    {% endif %}
            {% endfor %}
        </ul>
        <div class="nav__actions">
            <a href="" class="search__action">{% render "icon-search" %}</a>
            <a href="/account/login" class="account__action">{% render "icon-account" %}</a>
            <a href="/cart" class="bag__action js-cart-link">{% render "icon-bag" %}</a>
        </div>
    </div>
</nav>

{% schema %}
{
   "name": "Header",
   "class": "nav"
}
{% endschema %}